{
  "name": "modern-project-boilerplate",
  "version": "0.3.1",
  "description": "Boilerplate project with modern dev-tools",
  "keywords": [
    "boilerplate",
    "project",
    "babel",
    "eslint"
  ],
  "author": "Aleksandr Snov <snov.contact@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Noviel/modern-project-boilerplate.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "build": "babel src --out-dir dist",
    "major-release": "npm --no-git-tag-version version major && npm publish",
    "minor-release": "npm --no-git-tag-version version minor && npm publish",
    "patch-release": "npm --no-git-tag-version version patch && npm publish"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-latest": "^6.22.0",
    "eslint": "^3.15.0"
  }
}
